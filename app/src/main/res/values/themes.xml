<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Agora" parent="Theme.MaterialComponents.NoActionBar">

        <item name="android:windowBackground">#EEEBD3</item>
        <item name="android:navigationBarColor">@color/black</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/eggshell</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:autofilledHighlight">@android:color/transparent</item>
    </style>
    <style name="Theme.Agora.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Agora.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Agora.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashStyle" parent="Theme.Agora.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="ActionBarStyle" parent="@style/Theme.AppCompat.DayNight.DarkActionBar">
        <item name="windowActionBar">true</item>
    </style>

</resources>